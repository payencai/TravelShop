<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/shape_e2"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content">
    <TextView
        android:padding="2dp"
        android:textSize="12sp"
        android:gravity="center"
        android:layout_margin="10dp"
        android:textColor="@color/order_car"
        android:id="@+id/tv_name"
        android:text="租车"
        android:background="@drawable/shape_order_car"
        android:layout_width="50dp"
        android:layout_height="wrap_content" />
    <TextView
        android:textSize="@dimen/text_size_12sp"
        android:textColor="@color/color_888"
        android:layout_margin="10dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/tv_name"
        android:id="@+id/number"
        android:text="24345345355656"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/tv_666"
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
       android:layout_below="@id/tv_name"
        android:id="@+id/time"
        android:text="下单时间:  2018-11-21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center_horizontal"
            android:textSize="@dimen/text_size_12sp"
            android:id="@+id/tv_status"
            android:textColor="@color/color_333"
            android:text="退款中"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/order_price"
            android:id="@+id/tv_amount"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:text="￥12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:id="@+id/line"
        android:layout_marginTop="10dp"
        android:layout_below="@id/time"
        android:background="#e2e2e2"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <TextView
        android:visibility="gone"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/title1"
        android:text="宝马370自动当"
        android:layout_below="@id/line"
        android:textSize="14sp"
        android:textColor="@color/color_333"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:id="@+id/rl_title"
        android:layout_below="@id/title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/title2"
            android:text="xxx淘票票"
            android:textSize="14sp"
            android:textColor="@color/color_333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/num"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:text="x3"
            android:textColor="@color/color_333"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/visi_time"
            android:text="游玩时间:  2018-12-12"
            android:layout_marginBottom="10dp"
            android:layout_below="@id/title2"
            android:textSize="12sp"
            android:textColor="@color/color_888"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <View
        android:id="@+id/line2"
        android:layout_below="@id/rl_title"
        android:background="#e2e2e2"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
    <RelativeLayout
        android:layout_below="@id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_contact"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="联系人"
            android:layout_marginBottom="10dp"
            android:textSize="12sp"
            android:textColor="@color/color_888"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_toRightOf="@id/tv_contact"
            android:id="@+id/contact"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="庄伟然"
            android:layout_marginBottom="10dp"
            android:textSize="14sp"
            android:textColor="@color/color_333"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toRightOf="@id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView

                android:layout_toRightOf="@id/tv_contact"
                android:id="@+id/phone"
                android:text="13202908144"
                android:textSize="14sp"
                android:textColor="@color/color_333"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:id="@+id/line3"
                android:layout_below="@id/rl_title"
                android:background="@color/color_333"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"></View>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>