<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.activity.RouteDetailActivity">

    <ImageView
        android:id="@+id/pathBgImg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:src="@color/tv_333" />

    <RelativeLayout
        android:id="@+id/include"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@android:color/transparent">


        <ImageView
            android:id="@+id/back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="12dp"
            android:scaleType="centerInside"
            android:src="@drawable/general_back" />


        <TextView
            android:id="@+id/title"
            style="@style/common_font"
            android:layout_height="44dp"
            android:layout_centerInParent="true"
            android:text="药品信息"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/mine"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:paddingBottom="13dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:paddingTop="13dp"
            android:src="@mipmap/ic_date" />


    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/navigationRv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/include"
        android:layout_marginTop="24dp"
        android:background="@android:color/transparent"></android.support.v7.widget.RecyclerView>

</RelativeLayout>