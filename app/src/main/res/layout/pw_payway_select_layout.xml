<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:text="请选择支付方式"
        android:textColor="@color/tv_333"
        android:textSize="@dimen/text_size_14sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lines" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="start|center"
        android:paddingLeft="@dimen/aroundLR_edge"
        android:paddingRight="@dimen/aroundLR_edge"
        android:text="付款方式"
        android:textColor="@color/color_888"
        android:textSize="@dimen/text_size_14sp" />

    <RelativeLayout
        android:id="@+id/wx_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="start|center"
            android:paddingLeft="@dimen/aroundLR_edge"
            android:paddingRight="@dimen/aroundLR_edge"
            android:text="微信支付"
            android:textColor="@color/tv_333"
            android:textSize="@dimen/text_size_14sp" />

        <ImageView
            android:id="@+id/wx_pay_img"
            android:layout_width="@dimen/add_room_radio_btn"
            android:layout_height="@dimen/add_room_radio_btn"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/pay_select_way_img_bg" />


    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/money_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="start|center"
            android:paddingLeft="@dimen/aroundLR_edge"
            android:paddingRight="@dimen/aroundLR_edge"
            android:text="现金支付 (线下)"
            android:textColor="@color/tv_333"
            android:textSize="@dimen/text_size_14sp" />

        <ImageView
            android:id="@+id/money_pay_img"
            android:layout_width="@dimen/add_room_radio_btn"
            android:layout_height="@dimen/add_room_radio_btn"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:src="@drawable/pay_select_way_img_bg" />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/lines" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="start|center"
            android:paddingLeft="@dimen/aroundLR_edge"
            android:paddingRight="@dimen/aroundLR_edge"
            android:text="需付款"
            android:textColor="@color/color_888"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:gravity="center"
            android:text="¥5976.00"
            android:textColor="@color/tv_333"
            android:textSize="@dimen/text_size_20sp" />


    </RelativeLayout>

    <com.tec.travelagency.widget.FButton
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:text="确定"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        app:buttonColor="@color/app_theme_color"
        app:cornerRadius="@dimen/fbutton_default_shadow_height"
        app:shadowEnabled="false" />

</LinearLayout>