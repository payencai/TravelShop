<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/aroundLR_edge">

    <com.tec.travelagency.widget.CustomImageView
        android:id="@+id/head"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/p001"
        app:shape="circle" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/head"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:layout_toLeftOf="@id/head"
        android:background="@drawable/shape_rectangle_upper_harf"
        android:gravity="start"
        android:padding="6dp"
        android:text="这是我的疑问，麻烦给我个回复"
        android:textColor="@color/white" />

</RelativeLayout>