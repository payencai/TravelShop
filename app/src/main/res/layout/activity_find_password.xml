<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myparent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".common.activity.FindPasswordActivity">

    <include
        android:id="@+id/headLayout"
        layout="@layout/toobar_head_layout" />


    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/headLayout"
        android:layout_marginLeft="@dimen/aroundLR_edge"
        android:layout_marginRight="@dimen/aroundLR_edge"
        android:layout_marginTop="36dp"
        android:orientation="horizontal">

        <TextView
            style="@style/common_font"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:text="账号"
            android:textColor="@color/color_888" />

        <EditText
            android:id="@+id/account"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/tv_333"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_size_16sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:layout_below="@+id/layout1"
        android:layout_marginLeft="@dimen/aroundLR_edge"
        android:layout_marginRight="@dimen/aroundLR_edge"
        android:background="@color/lines" />

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/layout1"
        android:layout_marginLeft="@dimen/aroundLR_edge"
        android:layout_marginRight="@dimen/aroundLR_edge"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <TextView
            style="@style/common_font"
            android:layout_height="match_parent"
            android:layout_marginRight="12dp"
            android:text="密码"
            android:textColor="@color/color_888" />

        <EditText
            android:id="@+id/old_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/tv_333"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_size_16sp" />

    </LinearLayout>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:layout_below="@+id/layout2"
        android:layout_marginLeft="@dimen/aroundLR_edge"
        android:layout_marginRight="@dimen/aroundLR_edge"
        android:background="@color/lines" />

    <LinearLayout
        android:id="@+id/layout3"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/layout2"
        android:layout_marginLeft="@dimen/aroundLR_edge"
        android:layout_marginRight="@dimen/aroundLR_edge"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <TextView
            style="@style/common_font"
            android:layout_height="match_parent"

            android:layout_marginRight="12dp"
            android:text="新密码"
            android:textColor="@color/color_888" />

        <EditText
            android:id="@+id/new_password"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@null"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/tv_333"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/text_size_16sp" />

    </LinearLayout>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:layout_below="@+id/layout3"
        android:layout_marginLeft="@dimen/aroundLR_edge"
        android:layout_marginRight="@dimen/aroundLR_edge"
        android:background="@color/lines" />


    <Button
        android:id="@+id/submit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/view3"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/shape_rectangle_upper_harf"
        android:text="确定"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_18sp" />

</RelativeLayout>