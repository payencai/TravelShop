<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:layout_marginBottom="10dp"
    android:background="@drawable/shape_circular15_bead_while"
    android:orientation="vertical"
    android:paddingBottom="6dp"
    android:paddingLeft="@dimen/aroundLR_edge"
    android:paddingRight="@dimen/aroundLR_edge"
    android:paddingTop="6dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/name"
            style="@style/common_font"
            android:layout_height="wrap_content"
            android:text="销售额(日)"
            android:textColor="@color/color_888" />

        <TextView
            style="@style/common_font"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="单位(元)"
            android:textColor="@color/color_888" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/hotel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3621"
                android:textColor="@color/app_theme_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/dooricket"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3621"
                android:textColor="@color/app_theme_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/rentCar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3621"
                android:textColor="@color/app_theme_color"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/path"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3621"
                android:textColor="@color/app_theme_color"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="酒店"
                android:textColor="@color/tv_333"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="门票"
                android:textColor="@color/tv_333"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="租车"
                android:textColor="@color/tv_333"
                android:textSize="16sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="路线"
                android:textColor="@color/tv_333"
                android:textSize="16sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>