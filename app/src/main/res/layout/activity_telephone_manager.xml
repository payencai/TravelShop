<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".common.activity.TelephoneManagerActivity">

    <include
        android:id="@+id/headLayout"
        layout="@layout/toobar_head_layout" />


    <EditText
        android:id="@+id/telephone_edit"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/headLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="21dp"
        android:background="@drawable/shape_circular_bead_edit_bg"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:hint="请输入号码"
        android:maxLength="20"
        android:maxLines="1"
        android:padding="6dp"
        android:textCursorDrawable="@null"
        android:textSize="14sp" />


    <Button
        android:id="@+id/save"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/length_view_30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_rectangle_upper_harf"
        android:text="保存"
        android:textColor="@color/white" />


</RelativeLayout>