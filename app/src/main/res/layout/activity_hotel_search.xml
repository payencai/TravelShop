<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.activity.hotel.HotelSearchActivity">
    <RelativeLayout
        android:orientation="horizontal"
        android:background="@color/white"
        android:id="@+id/headLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_centerVertical="true"
            android:id="@+id/back"
            android:layout_marginRight="10dp"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:padding="10dp"
            android:src="@mipmap/back"/>
        <RelativeLayout
            android:padding="5dp"
            android:id="@+id/rl_search"
            android:background="@drawable/shape_grey"
            android:layout_toLeftOf="@id/cancel"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/back"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_centerInParent="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginLeft="50dp"
                    android:src="@drawable/search_bar_icon_normal"
                    android:layout_width="20dp"
                    android:layout_height="20dp"/>
                <EditText
                    android:id="@+id/search"
                    android:textColorHint="@color/tv_666"
                    android:textColor="@color/tv_333"
                    android:textSize="13sp"
                    android:hint="请输入查找的酒店名称"
                    android:background="@color/gray_e2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <TextView
                    android:visibility="gone"
                    android:id="@+id/show"
                    android:textColorHint="@color/tv_666"
                    android:textColor="@color/tv_333"
                    android:textSize="13sp"
                    android:text="请输入查找的酒店名称"
                    android:background="@color/gray_e2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:textSize="14sp"
            android:textColor="@color/app_theme_color"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/cancel"
            android:layout_alignParentRight="true"
            android:text="取消"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:background="@color/tv_666"
        android:layout_below="@id/headLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/btn_search"
            android:layout_margin="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:textColor="@color/tv_333"
            android:textSize="14sp"
            android:background="@color/bg_blue"
            android:gravity="center"
            android:text="搜索"
            android:layout_width="60dp"
            android:layout_height="40dp" >

        </TextView>
    </RelativeLayout>
</RelativeLayout>