<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/llLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/aroundLR_edge"
            android:paddingRight="@dimen/aroundLR_edge">

            <ImageView
                android:id="@+id/hotelHead"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/test_img" />

            <LinearLayout
                android:layout_marginBottom="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignTop="@id/hotelHead"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_toLeftOf="@+id/addRoomTypeBtn"
                android:layout_toRightOf="@+id/hotelHead"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:gravity="start"
                    android:maxLines="1"
                    android:ellipsize="end"
                    style="@style/common_font"
                    android:layout_height="wrap_content"
                    android:text="尊享双人房"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/address"
                    style="@style/common_font"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:gravity="start"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="4dp"
                    android:text="平台价：¥350"
                    android:textColor="@color/tv_666"
                    android:textSize="12sp" />



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/sellPrice"
                        style="@style/common_font"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="售价: ¥350"
                        android:textColor="@color/tv_666"
                        android:textSize="12sp"
                        android:visibility="gone" />
                    <LinearLayout
                        android:layout_alignParentBottom="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal"
                        android:paddingLeft="2dp">

                        <TextView
                            android:id="@+id/label1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_bordar_label_bg"
                            android:paddingBottom="2dp"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:text="双人房"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/label2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="6dp"
                            android:background="@drawable/shape_bordar_label_bg"
                            android:paddingBottom="2dp"
                            android:paddingLeft="4dp"
                            android:paddingRight="4dp"
                            android:paddingTop="2dp"
                            android:text="双人房"
                            android:textSize="10dp" />

                    </LinearLayout>
                </RelativeLayout>



            </LinearLayout>

            <TextView
                android:id="@+id/addRoomTypeBtn"
                style="@style/common_font"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="已上架"
                android:textColor="@color/app_theme_color"
                android:textSize="12sp" />

        </RelativeLayout>


        <TextView
            android:id="@+id/tvDelete"
            android:layout_width="65dp"
            android:layout_height="match_parent"
            android:background="#FFFF683F"
            android:gravity="center"
            android:text="删除"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14sp" />

        <TextView
            android:id="@+id/tvTop"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:background="#6e3c50"
            android:gravity="center"
            android:text="置顶"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_14sp"
            android:visibility="gone" />

    </LinearLayout>


</RelativeLayout>