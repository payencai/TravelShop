<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="105dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:background="@mipmap/home_bg_thehotel">
    <!--android:background="@drawable/shape_rectangle_home_item_bg1"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="酒店预定"
                android:textColor="@color/tv_333"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/isNoData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="资源加载中.."
                android:textColor="@color/color_888"
                android:textSize="12sp"
                android:visibility="gone" />

        </RelativeLayout>


        <ImageView
            android:id="@+id/tagImg"
            android:layout_width="82dp"
            android:layout_height="74dp"
            android:layout_marginLeft="24dp"
            android:src="@mipmap/home_hotel" />


        <!--      <TextView
                  android:id="@+id/des"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/name"
                  android:layout_marginLeft="15dp"
                  android:layout_marginTop="15dp"
                  android:text="@string/home_option_dex1"
                  android:textColor="@color/white"
                  android:textSize="14sp"
                  android:visibility="gone" />-->

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/name"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="酒店"
        android:textColor="@color/white"
        android:textSize="26sp"
        android:textStyle="bold" />


</RelativeLayout>