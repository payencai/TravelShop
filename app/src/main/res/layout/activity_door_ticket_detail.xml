<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.activity.DoorTicketDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v4.view.ViewPager
                android:id="@+id/door_viewpager"
                android:layout_width="match_parent"
                android:layout_height="220dp"></android.support.v4.view.ViewPager>

            <ImageView
                android:id="@+id/back"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:paddingBottom="9dp"
                android:paddingLeft="11dp"
                android:paddingRight="11dp"
                android:paddingTop="9dp"
                android:scaleType="centerInside"
                android:src="@mipmap/back" />

            <TextView
                android:id="@+id/cur_viewpager_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/aroundLR_edge"
                android:layout_marginTop="140dp"
                android:background="@drawable/shape_rectangle_circle_hotel_vp_black"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingLeft="@dimen/aroundLR_edge"
                android:paddingRight="@dimen/aroundLR_edge"
                android:paddingTop="3dp"
                android:text="1/3"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/floatingLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/aroundLR_edge"
                android:layout_marginRight="@dimen/aroundLR_edge"
                android:layout_marginTop="180dp"
                android:background="@drawable/shape_circular_bead_while"
                android:orientation="vertical"
                android:padding="@dimen/aroundLR_edge">

                <TextView
                    android:id="@+id/doorName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="广州雅轩国际大酒店"
                    android:textColor="@color/tv_333"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/doorDes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/doorName"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:gravity="start"
                    android:text="昆明国际旅行社成立20周年庆，全场旅游套餐9折，机会不容错过！我在长隆等着你！昆明国际旅行社成立20周年庆，全场旅游套餐9折，机会不容错过！我在长隆等着你！昆明国际旅行社成立20周年庆，全场旅游套餐9折，机会不容错过！我在长隆等着你！"
                    android:textColor="@color/tv_333"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/floatingLayout"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:orientation="vertical"
                android:padding="@dimen/aroundLR_edge">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/name"
                        style="@style/common_font"
                        android:layout_height="wrap_content"
                        android:text="广州长隆欢乐世界"
                        android:textColor="@color/tv_333"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/typeName"
                        style="@style/common_font"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="成人票"
                        android:textColor="@color/tv_333"
                        android:textSize="16sp" />
                </RelativeLayout>


                <TextView
                    style="@style/common_font"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="可退 随买随用，当日有效"
                    android:textColor="@color/tv_333"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="价格:"
                        android:textColor="@color/tv_333"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/priceShow"
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="8dp"
                        android:background="@drawable/shape_bordar_perice_bg"
                        android:ellipsize="end"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:padding="4dp"
                        android:textCursorDrawable="@null" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="¥"
                        android:textColor="@color/app_theme_color"
                        android:textSize="16sp" />


                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="购买须知:"
                    android:textColor="@color/tv_333"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="预定说明"
                    android:textColor="@color/tv_333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/reservation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="3dp"
                    android:text="预定时间：随买随用。有效期：游玩日期当天有效。适合人群：成人或身高1.5m以上儿童。"
                    android:textColor="@color/tv_333"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="费用说明"
                    android:textColor="@color/tv_333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/fee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="3dp"
                    android:text="费用包含：长隆水上乐园成人票一张。"
                    android:textColor="@color/tv_333"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="使用说明"
                    android:textColor="@color/tv_333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/use"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="3dp"
                    android:text="使用说明后台添加"
                    android:textColor="@color/tv_333"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="退款说明"
                    android:textColor="@color/tv_333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/refund"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:lineSpacingExtra="3dp"
                    android:text="预订付款后未使用，可在我的订单中申请退款，在游玩当日当天12:00前申请，不收取任何手续费，逾期不可退改"
                    android:textColor="@color/tv_333"
                    android:textSize="14sp" />


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</ScrollView>