<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_circular_bead_while"
    android:orientation="vertical">


    <TextView
        android:id="@+id/synopsis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="请输入退款理由"
        android:textColor="@color/tv_333"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/reject_reason_edit"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:layout_below="@+id/synopsis"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/shape_circular_bead_edit_bg"
        android:gravity="start"
        android:hint="最多可入输入300字"
        android:maxLength="300"
        android:padding="6dp"
        android:textCursorDrawable="@null"
        android:textSize="14sp" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/reject_reason_edit"
        android:layout_marginTop="24dp"
        android:background="@color/lines" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@+id/view"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/reject_submit"
            style="@style/common_font"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_below="@+id/view"
            android:layout_weight="1"
            android:text="确定" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/lines" />

        <TextView
            android:id="@+id/reject_cancel"
            style="@style/common_font"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_below="@+id/view"
            android:layout_weight="1"
            android:text="取消" />


    </LinearLayout>
</RelativeLayout>