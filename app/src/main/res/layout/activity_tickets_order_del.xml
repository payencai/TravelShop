                        android:textColor="@color/tv_333"
                        android:textSize="14sp" />


                </LinearLayout>
                <ListView
                    android:divider="@color/white"
                    android:id="@+id/rv_refund"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"></ListView>

                <!--申请取消-->
                <LinearLayout
                    android:id="@+id/applyCancelLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:padding="2dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="申请取消"
                        android:textColor="@color/color_888"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/applyCanceTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="2018-05-21 22:00"
                        android:textColor="@color/tv_333"
                        android:textSize="16sp" />


                </LinearLayout>

                <!--申请取消成功-->
                <LinearLayout
                    android:id="@+id/applyCancelSucceedLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:padding="2dp"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
