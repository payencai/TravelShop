                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:text="2018-05-21 22:00"
                        android:textColor="@color/tv_333"
                        android:textSize="16sp" />


                </LinearLayout>

                <!--申请取消原因-->
